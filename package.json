{
  "name": "weather-graphql",
  "description": "Weather GraphQL Queries",
  "version": "1.0.0",
  "dependencies": {
    "es6-promise": "^3.2.1",
    "graphql": "^0.7.0",
    "graphql-relay": "^0.4.3",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.0.0",
    "koa-bodyparser": "^2.2.0",
    "koa-compose": "^3.1.0",
    "koa-convert": "^1.2.0",
    "koa-cors": "0.0.16",
    "koa-graphql": "^0.5.6",
    "koa-logger": "^2.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-eslint": "^6.1.2",
    "babel-plugin-transform-flow-strip-types": "^6.14.0",
    "babel-polyfill": "^6.9.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "eslint": "^3.5.0",
    "eslint-config-airbnb": "^10.0.1",
