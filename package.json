    "flow-bin": "^0.32.0",
    "nodemon": "^1.10.2"
  },
  "license": "MIT",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/betiol/weather-graphql"
  },
  "scripts": {
    "build": "rm -rf dist/* && babel src --ignore *.spec.js --out-dir dist --copy-files",
